<?xml version="1.0"?>
<Simulation>
    <TankSim>
        <Inputs>
            <Digital>
                <!-- Digitale inputs (boolean) - gebruiken I prefix -->
                <Signal description="Sensor upper valve fully open" type="bool" range="0-1" io_prefix="I" status="FALSE">UpperValveOpen</Signal>
                <Signal description="Upper valve is fully closed" type="bool" range="0-1" io_prefix="I" status="FALSE">UpperValveClosed</Signal>
                <Signal description="Lower valve is fully open" type="bool" range="0-1" io_prefix="I" status="FALSE">LowerValveOpen</Signal>
                <Signal description="Lower valve is fully closed" type="bool" range="0-1" io_prefix="I" status="FALSE">LowerValveClosed</Signal>
                <Signal description="Tank upper level sensor" type="bool" range="0-1" io_prefix="I" status="FALSE">TanklevelSensorHigh</Signal>
                <Signal description="Tank lower level sensor" type="bool" range="0-1" io_prefix="I" status="FALSE">TankLevelSensorLow</Signal>
            </Digital>
            <Analog>
                <!-- Analoge inputs (word/int) - gebruiken I prefix, nemen 2 bytes -->
                <Signal description="Tank level measurement" type="int" range="0-27648" io_prefix="I" status="0">TankLevel</Signal>
                <Signal description="Flow rate sensor" type="int" range="0-27648" io_prefix="I" status="0">FlowRate</Signal>
                <Signal description="Temperature sensor" type="int" range="0-27648" io_prefix="I" status="0">Temperature</Signal>
            </Analog>
        </Inputs>
        <Outputs>
            <Digital>
                <!-- Digitale outputs (boolean) - gebruiken Q prefix -->
                <Signal description="Enables the heater element" type="bool" range="0-1" io_prefix="Q" status="oFALSE">Heater</Signal>
                <Signal description="Upper valve control" type="bool" range="0-1" io_prefix="Q" status="FALSE">UpperValveControl</Signal>
                <Signal description="Lower valve control" type="bool" range="0-1" io_prefix="Q" status="FALSE">LowerValveControl</Signal>
            </Digital>
            <Analog>               
                <!-- Analoge outputs (word/int) - gebruiken Q prefix, nemen 2 bytes -->
                <Signal description="Pump speed output" type="int" range="0-27648" io_prefix="Q" status="0">PumpSpeed</Signal>
                <Signal description="Valve position output" type="int" range="0-27648" io_prefix="Q" status="0">ValvePosition</Signal>
                <Signal description="Heater element output" type="int" range="0-27648" io_prefix="Q" status="0">AnalogHeater</Signal>
            </Analog>
        </Outputs>
    </TankSim>
    <ConveyorSim>
        <Note>SOON</Note>
    </ConveyorSim>
</Simulation>