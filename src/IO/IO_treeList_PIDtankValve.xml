<?xml version="1.0"?>
<Simulation>
    <GeneralControls>
        <Inputs>
            <Digital>
                <!-- PLC Inputs = Simulator Outputs -->
                <Signal description="Start command" type="bool" range="0-1" io_prefix="I" status="FALSE">Start</Signal>
                <Signal description="Stop command" type="bool" range="0-1" io_prefix="I" status="FALSE">Stop</Signal>
                <Signal description="Reset command" type="bool" range="0-1" io_prefix="I" status="FALSE">Reset</Signal>
            </Digital>
            <Analog>
                <!-- PLC Inputs = Simulator Outputs -->
                <Signal description="Control slider 1 value" type="int" range="0-32747" io_prefix="I" status="0">Control1</Signal>
                <Signal description="Control slider 2 value" type="int" range="0-32747" io_prefix="I" status="0">Control2</Signal>
                <Signal description="Control slider 3 value" type="int" range="0-32747" io_prefix="I" status="0">Control3</Signal>
            </Analog>
        </Inputs>
        <Outputs>
            <Digital>
                <!-- PLC Outputs = Simulator Inputs -->
                <Signal description="Status indicator 1" type="bool" range="0-1" io_prefix="Q" status="FALSE">Indicator1</Signal>
                <Signal description="Status indicator 2" type="bool" range="0-1" io_prefix="Q" status="FALSE">Indicator2</Signal>
                <Signal description="Status indicator 3" type="bool" range="0-1" io_prefix="Q" status="FALSE">Indicator3</Signal>
                <Signal description="Status indicator 4" type="bool" range="0-1" io_prefix="Q" status="FALSE">Indicator4</Signal>
            </Digital>
            <Analog>
                <!-- PLC Outputs = Simulator Inputs -->
                <Signal description="Analog value 1" type="int" range="0-32747" io_prefix="Q" status="0">Analog1</Signal>
                <Signal description="Analog value 2" type="int" range="0-32747" io_prefix="Q" status="0">Analog2</Signal>
                <Signal description="Analog value 3" type="int" range="0-32747" io_prefix="Q" status="0">Analog3</Signal>
            </Analog>
        </Outputs>
    </GeneralControls>
    <PIDtankValve>
        <Inputs>
            <Digital>
                <!-- PLC Inputs = Simulator Outputs -->
                <Signal description="Tank overflow sensor" type="bool" range="0-1" io_prefix="I" status="FALSE">TankOverflow</Signal>
                <Signal description="Tank empty sensor" type="bool" range="0-1" io_prefix="I" status="FALSE">TankEmpty</Signal>
                <Signal description="Valve fully open" type="bool" range="0-1" io_prefix="I" status="FALSE">ValveFullyOpen</Signal>
                <Signal description="Valve fully closed" type="bool" range="0-1" io_prefix="I" status="FALSE">ValveFullyClosed</Signal>
            </Digital>
            <Analog>
                <!-- PLC Inputs = Simulator Outputs -->
                <Signal description="Tank level (0-100%)" type="int" range="0-27648" io_prefix="I" status="0">TankLevel</Signal>
                <Signal description="Flow rate in" type="int" range="0-27648" io_prefix="I" status="0">FlowRateIn</Signal>
                <Signal description="Flow rate out" type="int" range="0-27648" io_prefix="I" status="0">FlowRateOut</Signal>
                <Signal description="Temperature" type="int" range="0-27648" io_prefix="I" status="0">Temperature</Signal>
            </Analog>
        </Inputs>
        <Outputs>
            <Digital>
                <!-- PLC Outputs = Simulator Inputs -->
                <Signal description="Inlet valve open" type="bool" range="0-1" io_prefix="Q" status="FALSE">InletValveOpen</Signal>
                <Signal description="Outlet valve open" type="bool" range="0-1" io_prefix="Q" status="FALSE">OutletValveOpen</Signal>
                <Signal description="Pump enable" type="bool" range="0-1" io_prefix="Q" status="FALSE">PumpEnable</Signal>
                <Signal description="Alarm reset" type="bool" range="0-1" io_prefix="Q" status="FALSE">AlarmReset</Signal>
            </Digital>
            <Analog>
                <!-- PLC Outputs = Simulator Inputs -->
                <Signal description="Level setpoint (0-100%)" type="int" range="0-27648" io_prefix="Q" status="0">LevelSetpoint</Signal>
                <Signal description="Valve position (0-100%)" type="int" range="0-27648" io_prefix="Q" status="0">ValvePosition</Signal>
                <Signal description="PID proportional gain" type="int" range="0-27648" io_prefix="Q" status="0">PID_Kp</Signal>
                <Signal description="PID integral time" type="int" range="0-27648" io_prefix="Q" status="0">PID_Ki</Signal>
                <Signal description="PID derivative time" type="int" range="0-27648" io_prefix="Q" status="0">PID_Kd</Signal>
            </Analog>
        </Outputs>
    </PIDtankValve>
</Simulation>
